{
  "name": "webpack-starter-config",
  "version": "4.17.2",
  "description": "Simple webpack config",
  "main": "index.js",
  "scripts": {
    "restart": "npx rimraf node_modules && npm i",
    "build": "cross-env NODE_ENV=production  webpack --mode production --colors --progress",
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --open",
    "watch": "cross-env NODE_ENV=development webpack --mode development --watch",
    "start2": "cross-env NODE_ENV=development webpack-dev-server --mode development --hot --colors --progress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeeSwagger/webpack-starter.git"
  },
  "keywords": [
    "webpack",
    "es6",
    "es7",
    "babel",
    "sass"
  ],
  "author": "LeeSwagger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LeeSwagger/webpack-starter/issues"
  },
  "homepage": "https://github.com/LeeSwagger/webpack-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "autoprefixer": "^9.8.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.3",
    "file-loader": "^6.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "image-webpack-loader": "^6.0.0",
    "lint-staged": "^10.2.9",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.1",
    "lodash": "^4.17.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/js/**/*.{js,json,vue}": [
      "npm run lint:write",
      "git add"
    ]
  },
  "prettier": {
    "useTabs": false,
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true,
    "bracketSpacing": true
  }
}
